<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileFragment">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/background_layout" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tv_account"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp">

        <TextView
            style="@style/TextRegular"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="Akun"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_account"
        android:layout_marginStart="@dimen/margin_space"
        android:layout_marginEnd="@dimen/margin_space">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/person_sample"
            app:civ_border_width="2dp" />

        <ImageButton
            android:id="@+id/btn_change_image_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignEnd="@+id/profile_image"
            android:layout_alignBottom="@+id/profile_image"
            android:background="@drawable/badge_background"
            android:backgroundTint="@color/colorWhite"
            android:padding="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_camera_grey" />

        <TextView
            android:id="@+id/tv_hello"
            style="@style/TextRegular"
            android:layout_marginStart="11dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/profile_image"
            android:text="Halo,"
            android:textColor="@color/colorWhite" />

        <TextView
            style="@style/TextSemiBold"
            android:layout_below="@+id/tv_hello"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/profile_image"
            android:text="Dadan Ramdhani"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_email"
            style="@style/TextSemiBold"
            android:layout_below="@+id/profile_image"
            android:layout_marginTop="13dp"
            android:text="EMAIL"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_email_profile"
            style="@style/TextRegular"
            android:layout_below="@+id/text_email"
            android:text="dadanramdhani1509@gmail.com"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/text_no_hp"
            style="@style/TextSemiBold"
            android:layout_below="@+id/tv_email_profile"
            android:layout_marginTop="5dp"
            android:text="No HP"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_no_hp_profile"
            style="@style/TextRegular"
            android:layout_below="@+id/text_no_hp"
            android:text="089602525473"
            android:textColor="@color/colorWhite" />

        <TextView
            style="@style/TextRegular"
            android:layout_below="@+id/tv_no_hp_profile"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:text="Bergabung sejak 30 April 2020"
            android:textColor="@color/colorWhite" />


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView3"
        android:paddingStart="@dimen/margin_space"
        android:paddingTop="@dimen/margin_space"
        android:paddingEnd="@dimen/margin_space"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="90dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSemiGrey"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    style="@style/TextSemiBold"
                    android:lineSpacingExtra="9sp"
                    android:text="20"
                    android:textSize="16sp" />

                <TextView
                    style="@style/TextRegular"
                    android:text="Pembelian"
                    android:textSize="14sp" />


            </LinearLayout>

            <TextView
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:drawableStart="@drawable/ic_edit_grey"
                android:drawablePadding="@dimen/margin_space"
                android:text="Edit Akun"
                android:textColor="@color/colorGrey"
                android:textSize="16sp" />

            <TextView
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_marginTop="27dp"
                android:drawableStart="@drawable/ic_pin_grey"
                android:drawablePadding="@dimen/margin_space"
                android:text="Ubah Password"
                android:textColor="@color/colorGrey"
                android:textSize="16sp" />

            <TextView
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_marginTop="27dp"
                android:drawableStart="@drawable/ic_pin_grey"
                android:drawablePadding="@dimen/margin_space"
                android:text="Alamat"
                android:textColor="@color/colorGrey"
                android:textSize="16sp" />

            <TextView
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_marginTop="27dp"
                android:drawableStart="@drawable/ic_edit_grey"
                android:drawablePadding="@dimen/margin_space"
                android:text="Rekening Bank"
                android:textColor="@color/colorGrey"
                android:textSize="16sp" />

            <TextView
                style="@style/TextRegular"
                android:layout_width="match_parent"
                android:layout_marginTop="27dp"
                android:drawableStart="@drawable/ic_logout_grey"
                android:drawablePadding="@dimen/margin_space"
                android:text="Logout"
                android:textColor="@color/colorGrey"
                android:textSize="16sp" />

            <TextView
                style="@style/TextSemiBold"
                android:layout_marginTop="30dp"
                android:text="INFORMASI PENJUALAN" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorSemiGrey"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        style="@style/TextSemiBold"
                        android:lineSpacingExtra="9sp"
                        android:text="20"
                        android:textSize="16sp" />

                    <TextView
                        style="@style/TextRegular"
                        android:text="Produk"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@color/colorSemiGrey"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        style="@style/TextSemiBold"
                        android:lineSpacingExtra="9sp"
                        android:text="20"
                        android:textSize="16sp" />

                    <TextView
                        style="@style/TextRegular"
                        android:text="Penjualan"
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:background="@drawable/badge_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:padding="7dp">

                <TextView
                    android:id="@+id/tv_free_delivery"
                    style="@style/TextSemiBold"
                    android:layout_centerInParent="true"
                    android:text="Free Ongkir"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/cb_free_delivery"
                    android:buttonTint="@color/colorLightRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <TextView
                style="@style/TextRegular"
                android:layout_marginTop="10dp"
                android:text="Free Ongkir (Ditanggung Penjual) Agar Produk anda lebih banyak diminati oleh Pembeli" />

            <Button
                style="@style/ButtonGradient"
                android:layout_marginTop="15dp"
                android:text="Jual Produk"
                android:textSize="14sp" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>