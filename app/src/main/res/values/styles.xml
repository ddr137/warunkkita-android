<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorLightRed</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextTitleHeaderRegular" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TextTitleSemiBold" parent="@style/TextAppearance.AppCompat">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="editText">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/edit_text_white</item>
    </style>

    <style name="TextOrange" parent="@style/TextAppearance.AppCompat">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextRegular" parent="@style/TextAppearance.AppCompat">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextMedium" parent="@style/TextAppearance.AppCompat">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="ButtonGradient">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_gradient</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>